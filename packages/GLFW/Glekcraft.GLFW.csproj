<?xml version="1.0" encoding="UTF-8"?>
<?xml-model href="https://github.com/dotnet/msbuild/raw/main/src/MSBuild/Microsoft.Build.xsd" type="application/xml" schematypens="http://schemas.microsoft.com/developer/msbuild/2003"?>
<Project Sdk="Microsoft.NET.Sdk">
    <PropertyGroup>
        <RuntimeIdentifiers>win;linux</RuntimeIdentifiers>
        <RestorePackagesWithLockFile>true</RestorePackagesWithLockFile>
        <RootNamespace>Glekcraft.GLFW</RootNamespace>
        <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
        <TargetFramework>net7.0</TargetFramework>
        <ImplicitUsings>disable</ImplicitUsings>
        <LangVersion>latest</LangVersion>
        <Nullable>enable</Nullable>
        <NoWarn>IDE0130</NoWarn>
    </PropertyGroup>
    <ItemGroup>
        <Using Include="System" />
    </ItemGroup>
    <Import Condition="$(NativeRuntimeTargetsGuard) != 'true'" Project="$(MSBuildThisFileDirectory)../../NativeRuntime.targets" />
    <PropertyGroup>
        <NativeLibraryName Condition="$(NativeLibraryName) == ''">glfw</NativeLibraryName>
        <NativeLibraryFullName Condition="$(NativeLibraryFullName) == ''">$(NativeRuntimeFilePrefix)$(NativeLibraryName)$(NativeRuntimeFileSuffix)$(NativeRuntimeFileExtension)</NativeLibraryFullName>
    </PropertyGroup>
    <ItemGroup>
        <Content Include="$(MSBuildThisFileDirectory)runtime/$(NativeRuntimeTopIdentifier)/$(NativeLibraryFullName)" CopyToOutputDirectory="Always" Visible="false" Link="$(NativeLibraryFullName)" />
    </ItemGroup>
</Project>
